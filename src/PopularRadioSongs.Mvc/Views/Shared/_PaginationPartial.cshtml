@model PagedData

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center @(Model.SmallStyle ? "pagination-sm" : "")">
        @if (Model.HavePrevious)
        {
            <li class="page-item">
                <a class="page-link" href="?page=@(Model.Page - 1)&pageSize=@Model.PageSize">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Previous</span>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.Page)
            {
                <li class="page-item active" aria-current="page">
                    <span class="page-link">@i</span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@i&pageSize=@Model.PageSize">@i</a>
                </li>
            }
        }

        @if (Model.HaveNext)
        {
            <li class="page-item">
                <a class="page-link" href="?page=@(Model.Page + 1)&pageSize=@Model.PageSize">Next</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Next</span>
            </li>
        }
    </ul>
</nav>